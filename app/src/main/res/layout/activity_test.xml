<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".Test">

    <ImageView
        android:id="@+id/connimage"
        android:layout_width="150dp"
        android:layout_height="127dp"
        android:layout_marginStart="137dp"
        android:layout_marginTop="102dp"
        android:layout_marginEnd="124dp"
        android:layout_marginBottom="224dp"
        app:layout_constraintBottom_toTopOf="@+id/connbtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/conntext"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/conntext"
        android:layout_width="150dp"
        android:layout_height="46dp"
        android:layout_marginStart="69dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="102dp"
        android:text="TextView"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/connimage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/connbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:textStyle="bold"
        android:text="connect"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        ></Button>
</android.support.constraint.ConstraintLayout>